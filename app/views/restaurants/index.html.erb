<div class = "container">
  <div class="row">
    <div class="card " >
      <h3> Restaurants List </h3>
      <div class="card-body">
        <% @restaurants.each do |restaurant| %>
          <h5 class="card-title"> <%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.address %></p>
          <%= link_to "More Detail" , restaurant_path(restaurant)%>
        <% end %>
      </div>
    </div>
  </div>
</div>
